html(lang="en")
    head
        include bootstrap 
        script(src="javascripts/index.js") 
        title Homepage
    body 
        div.container
            nav.navbar.navbar-expand-sm
                img(src="images/front.png", width="150" alt="")
                ul.navbar-nav.d-flex.justify-content-end.w-100
                    li.nav-item
                        a.nav-link.btn.btn-danger.text-white.p-2.mx-2.fw-bold(href="#" data-bs-toggle="modal" data-bs-target="#login-modal") Login
